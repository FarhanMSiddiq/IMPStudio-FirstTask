<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/colorWhite"
    tools:context="com.farhan.quiz.QuizActivity">

     <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:background="@color/colorPrimary"
         android:elevation="1dp"
         tools:ignore="MissingConstraints">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <ImageView
                 android:id="@+id/btn_keluar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_baseline_arrow_back_24"
                 android:layout_centerVertical="true"
                 />

             <TextView
                 android:id="@+id/time"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="00:00:00"
                 android:layout_marginLeft="34dp"
                 android:textColor="@color/colorWhite"
                 android:layout_centerVertical="true"
                 android:textSize="20dp"/>

             <Button
                 android:id="@+id/btn_selesai"
                 android:layout_width="100dp"
                 android:layout_height="30dp"
                 android:background="@drawable/transparan"
                 android:layout_centerVertical="true"
                 android:text="Akhiri Tryout"
                 android:textSize="10dp"
                 android:layout_marginBottom="5dp"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"
                 />

         </RelativeLayout>

     </android.support.v7.widget.Toolbar>

     <LinearLayout
         android:id="@+id/nomer"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:layout_below="@+id/toolbar"
         android:orientation="horizontal">

         <TextView
             android:id="@+id/nm1"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="5dp"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:text="1"
             android:textColor="@color/colorBlack"
             android:textSize="18dp"
             android:gravity="center" />

         <TextView
             android:id="@+id/nm2"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="5dp"
             android:text="2"
             android:textColor="@color/colorBlack"
             android:textSize="18dp"
             android:gravity="center"
             />

     </LinearLayout>

     <LinearLayout
         android:id="@+id/batas"
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:layout_below="@id/nomer"
         android:layout_marginBottom="5dp"
         android:background="#000"
         android:orientation="vertical" />

    <LinearLayout
        android:layout_below="@+id/batas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#000000"
            android:text="loading..."
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.04" >
            <RadioButton
                android:id="@+id/radio0"
                android:padding="20dp"
                android:buttonTint="#000"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loading..." />
            <RadioButton
                android:id="@+id/radio1"
                android:padding="20dp"
                android:buttonTint="#000"
                android:textColor="#000000"
                android:textColorLink="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loading..." />
            <RadioButton
                android:id="@+id/radio2"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#000"
                android:textColor="#000000"
                android:textColorLink="#000"
                android:text="loading..." />
            <RadioButton
                android:id="@+id/radio3"
                android:padding="20dp"
                android:textColor="#000000"
                android:buttonTint="#000"
                android:textColorLink="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="loading..." />
            <RadioButton
                android:id="@+id/radio4"
                android:padding="20dp"
                android:buttonTint="#000"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="loading..." />
        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/bawah"
        android:layout_marginBottom="5dp"
        android:background="#000"/>

     <LinearLayout
         android:id="@+id/bawah"
         android:layout_width="match_parent"
         android:weightSum="3"
         android:layout_height="?attr/actionBarSize"
         android:layout_alignParentBottom="true">

         <Button
             android:id="@+id/button2"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:background="@drawable/btn"
             android:textColor="#000"
             android:layout_marginLeft="2dp"
             android:textSize="12dp"
             android:layout_height="wrap_content"
             android:text="Sebelumnya" />

         <Button
             android:id="@+id/button3"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_marginRight="5dp"
             android:layout_marginLeft="5dp"
             android:background="@drawable/ntm_kuning"
             android:textColor="#000"
             android:layout_height="wrap_content"
             android:text="Ragu Ragu" />

         <Button
             android:id="@+id/button1"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:background="@drawable/btn"
             android:textColor="#000"
             android:layout_marginRight="2dp"
             android:textSize="12dp"
             android:layout_height="wrap_content"
             android:text="Selanjutnya" />

     </LinearLayout>

</RelativeLayout>